{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "target": "esnext",
        "module": "es6",
        "lib": [
            "es2016",
            "dom"
        ],
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@root/*": ["."],
            "model/*": ["./model/*"],
            "atoms/*": ["./model/atoms/*"],
            "molecules/*": ["./model/molecules/*"],
            "organisms/*": ["./model/organisms/*"]
        }
    },
    "include": [
        "model/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
    ]
}